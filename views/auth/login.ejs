<div class="w-50 mx-auto">
    <h2 class="text-center">Đăng nhập</h2>
    <% if (error.length) { %>
      <div class="alert alert-danger text-center"><%= error %></div>
    <% } %>
    <form action="" method="post">
      <div class="mb-3">
        <label for="">Email</label>
        <input
          type="text"
          name="email"
          class="form-control"
          placeholder="Email..."
        />
      </div>
      <div class="mb-3">
        <label for="">Mật khẩu</label>
        <input
          type="password"
          name="password"
          class="form-control"
          placeholder="Mật khẩu..."
        />
      </div>
      <div class="d-grid">
        <button type="submit" class="btn btn-primary">Đăng nhập</button>
        <a href="/auth/google" class="btn btn-danger mt-2">Đăng nhập với Google</a>

      </div>
      
      <div class="d-grid">
        <a href="/auth/register" class="btn mt-2 btn-info">Đăng ký</a>
      </div>

      <div class="d-grid">
        <a href="/forgot-password" class="text-center text-decoration-none mt-2 text-danger">Quên mật khẩu</a>
      </div>
    </form>
  </div>